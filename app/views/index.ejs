	<!-- //contato -->
	<div class="modal fade" id="modal-contato" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header bg-danger">
					<button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
					<h4 class="modal-title">Deixe sua mensagem <small>(sugestão, crítica ou elogio.)</small></h4>
				</div>
				<div class="modal-body">
					<form action="/mensagem" method="POST" target="_blank">
						<div class="form-group">
							<label for="nome" class="control-label">Nome</label>
							<input type="text" name="nome" id="nome" class="form-control" placeholder="Digite o seu nome" maxlength="100" required>
						</div>
						<div class="form-group">
							<label for="email" class="control-label">Email</label>
							<input type="email" name="email" id="email" class="form-control" placeholder="Digite o seu email" maxlength="100" required>
						</div>
						<div class="form-group">
							<label for="mensagem" class="control-label">Messagem</label>
							<textarea name="mensagem" id="mensagem" class="form-control" placeholder="Digite a sua mensagem" rows="6" required></textarea>
						</div>

						<div class="form-group">
							<button type="submit" class="btn btn-success">Enviar</button>
						</div>
					</form>
				</div>
			</div>
		</div>
